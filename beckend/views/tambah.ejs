<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Tambah Produk</h3>
                </div>
                <div class="card-body">
                    <form action="/produk" method="POST">
                        <div class="mb-3">
                            <label class="form-label">Nama Produk</label>
                            <input type="text" name="nama" class="form-control" placeholder="Masukkan nama produk"
                                required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Harga</label>
                            <input type="number" name="harga" class="form-control" placeholder="Masukkan harga"
                                required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Stok</label>
                            <input type="number" name="stok" class="form-control" placeholder="Masukkan stok" required>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Simpan</button>
                            <a href="/produk" class="btn btn-secondary mt-2">Kembali</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>